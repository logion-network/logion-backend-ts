{
    "name": "logion-ts-backend-prototype",
    "version": "0.0.0",
    "private": true,
    "scripts": {
        "build": "rimraf dist && yarn run build:calc && yarn run generate-views && tsc --p ./tsconfig.app.json",
        "generate-views": "npx openapi-typescript resources/schemas.json --output src/logion/controllers/components.ts",
        "build:calc": "rimraf calc/psk && rimraf calc/target && calc/build.sh",
        "start": "yarn run build && NODE_ENV=development node dist/app.js",
        "serve": "tsc-watch --p ./tsconfig.app.json --onSuccess \"env NODE_ENV=development node ./dist/app.js\"",
        "test": "yarn run unit-test && yarn run integration-test",
        "unit-test": "jasmine-ts JASMINE_CONFIG_PATH=spec/support/jasmine.json",
        "integration-test": "yarn run setup-test-db && jasmine-ts JASMINE_CONFIG_PATH=spec/support/jasmine-integration.json ; yarn run teardown-test-db",
        "setup-test-db": "docker run -d --rm --name logion-test-db -e POSTGRES_PASSWORD=secret -p 5432:5432 postgres:12",
        "teardown-test-db": "docker stop logion-test-db",
        "coverage-unit": "nyc yarn run unit-test",
        "coverage": "nyc yarn run test"
    },
    "dependencies": {
        "@polkadot/api": "^5.4.1",
        "@substrate/calc": "^0.2.2",
        "body-parser": "^1.19.0",
        "bson": "^4.4.1",
        "dinoloop": "^2.4.0",
        "express": "^4.17.1",
        "express-fileupload": "^1.2.1",
        "express-oas-generator": "^1.0.39",
        "inversify": "^5.1.1",
        "moment": "^2.29.1",
        "mongoose": "^5.13.7",
        "mongoose-to-swagger": "^1.3.0",
        "openapi-typescript": "^4.0.2",
        "pg": "^8.7.1",
        "source-map-support": "^0.5.10",
        "swagger-ui-express": "^4.1.6",
        "toad-scheduler": "^1.5.0",
        "typeorm": "^0.2.36",
        "uuid": "^8.3.2"
    },
    "devDependencies": {
        "@istanbuljs/nyc-config-typescript": "^1.0.1",
        "@tsconfig/node14": "^1.0.1",
        "@types/express": "^4.17.13",
        "@types/express-fileupload": "^1.1.7",
        "@types/jasmine": "^3.8.2",
        "@types/node": "^16.4.13",
        "@types/supertest": "^2.0.11",
        "@types/swagger-ui-express": "^4.1.3",
        "@types/uuid": "^8.3.1",
        "jasmine": "^3.8.0",
        "jasmine-spec-reporter": "^7.0.0",
        "jasmine-ts": "^0.4.0",
        "moq.ts": "^7.3.4",
        "nyc": "^15.1.0",
        "rimraf": "^3.0.2",
        "supertest": "^6.1.5",
        "ts-node": "^10.2.0",
        "tsc-watch": "^4.4.0",
        "typescript": "^4.0.0"
    },
    "engines": {
        "node": ">=14"
    },
    "workspaces": [
        "calc/pkg"
    ]
}
