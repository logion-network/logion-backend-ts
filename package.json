{
    "name": "logion-backend-ts",
    "version": "0.37.0",
    "private": true,
    "author": {
        "name": "Logion Team",
        "email": "info@logion.network",
        "url": "https://logion.network/"
    },
    "license": "Apache-2.0",
    "scripts": {
        "build": "rimraf dist && yarn run generate-views && yarn patch-ipfs && tsc --project ./tsconfig.app.json && cp package.json ./dist",
        "patch-ipfs": "sed -i 's/| ReadableStream<ImportCandidate>//g' node_modules/ipfs-core-types/src/utils.ts && sed -i 's/| ReadableStream<Uint8Array>//g' node_modules/ipfs-core-types/src/utils.ts",
        "generate-views": "npx openapi-typescript resources/schemas.json --output src/logion/controllers/components.ts",
        "start": "yarn run build && NODE_ENV=development node dist/app.js",
        "inspect": "yarn run build && NODE_ENV=development node --inspect dist/app.js",
        "serve": "tsc-watch --p ./tsconfig.app.json --onSuccess \"env NODE_ENV=development node ./dist/app.js\"",
        "test": "NODE_OPTIONS=--loader=ts-node/esm jasmine --config=spec/support/jasmine.json",
        "integration-test": "yarn run setup-test-db && NODE_OPTIONS=--loader=ts-node/esm jasmine --config=spec/support/jasmine-integration.json ; yarn run teardown-test-db",
        "setup-test-db": "docker run -d --rm --name logion-test-db -e POSTGRES_PASSWORD=secret -p 5432:5432 logionnetwork/logion-postgres:latest",
        "teardown-test-db": "docker stop logion-test-db",
        "coverage": "nyc yarn run test",
        "typeorm": "node ./node_modules/typeorm/cli.js -d ./dist/db-tools/ormconfig.js"
    },
    "dependencies": {
        "@logion/node-api": "^0.15.0",
        "@logion/node-exiftool": "^2.3.1-3",
        "@logion/rest-api-core": "^0.4.1",
        "@polkadot/wasm-crypto": "^7.1.1",
        "alchemy-sdk": "^2.4.3",
        "ansi-regex": "^6.0.1",
        "axios": "^1.3.2",
        "body-parser": "^1.20.1",
        "bson": "^4.7.0",
        "cors": "^2.8.5",
        "ipfs-client": "^0.10.0",
        "moment": "^2.29.4",
        "node-fetch": "^3.3.0",
        "nodemailer": "^6.8.0",
        "pg": "^8.8.0",
        "prom-client": "^14.1.0",
        "pug": "^3.0.2",
        "source-map-support": "^0.5.21",
        "toad-scheduler": "^2.1.0"
    },
    "devDependencies": {
        "@istanbuljs/nyc-config-typescript": "^1.0.2",
        "@tsconfig/node18": "^1.0.1",
        "@types/cors": "^2.8.12",
        "@types/express": "^4.17.13",
        "@types/express-fileupload": "^1.2.2",
        "@types/jasmine": "^4.0.3",
        "@types/node": "^18.6.2",
        "@types/nodemailer": "^6.4.4",
        "@types/pug": "^2.0.6",
        "@types/source-map-support": "^0.5.6",
        "@types/supertest": "^2.0.11",
        "@types/swagger-ui-express": "^4.1.3",
        "@types/uuid": "^8.3.4",
        "dotenv": "^16.0.3",
        "jasmine": "^4.5.0",
        "jasmine-spec-reporter": "^7.0.0",
        "moq.ts": "^10.0.2",
        "nyc": "^15.1.0",
        "rimraf": "^3.0.2",
        "supertest": "^6.3.3",
        "ts-node": "^10.9.1",
        "tsc-watch": "^6.0.0",
        "typescript": "^4.9.4"
    },
    "engines": {
        "node": ">=18"
    },
    "packageManager": "yarn@3.2.2",
    "type": "module"
}
